<UserControl x:Class="Repairshop.Client.Infrastructure.Forms.FormContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Repairshop.Client.Infrastructure.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="formContainer">

    <DockPanel LastChildFill="True"
               IsEnabled="{Binding ElementName=formContainer, Path=EnableForm}">

        <Button Content="{Binding ElementName=formContainer, Path=SubmitText}"
                Style="{DynamicResource MaterialDesignRaisedDarkButton}"
                Click="Submit"
                DockPanel.Dock="Bottom" />

        <ProgressBar DockPanel.Dock="Bottom"
                     IsIndeterminate="True"
                     Visibility="{Binding ElementName=formContainer, Path=ProgressBarVisibility}"
                     Height="7" />

        <ContentControl x:Name="FormContentControl" 
                        DockPanel.Dock="Top"/>

    </DockPanel>
    
</UserControl>
