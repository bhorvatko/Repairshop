<UserControl x:Class="Repairshop.Client.Features.WarrantManagement.Warrants.EditWarrantSequenceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Repairshop.Client.Features.WarrantManagement.Warrants"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=local:EditWarrantSequenceViewModel}">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadProceduresCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    
    <DockPanel>

        <GroupBox DockPanel.Dock="Left" 
                  Header="Procedure">
            <ListBox ItemsSource="{Binding AvailableProcedures}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Label Content="{Binding Name}" 
                               Background="{Binding BackgroundColorBrush}" 
                               Foreground="{Binding ForegroundColorBrush}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>

        <GroupBox DockPanel.Dock="Right"
                  Header="Koraci naloga">
            <ListBox ItemsSource="{Binding Steps}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Label Content="{Binding Procedure.Name}"
                               Background="{Binding Procedure.BackgroundColorBrush}"
                               ForceCursor="{Binding Procedure.ForegroundColorBrush}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>

    </DockPanel>
</UserControl>
