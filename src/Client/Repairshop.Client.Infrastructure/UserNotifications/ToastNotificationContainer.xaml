<UserControl x:Class="Repairshop.Client.Infrastructure.UserNotifications.ToastNotificationContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Repairshop.Client.Infrastructure.UserNotifications"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance local:ToastNotificationContainerViewModel}">

    <md:Card Background="{Binding BackgroundBrush}"
             Visibility="{Binding Visibility}">
        
        <StackPanel Orientation="Horizontal">

            <Label Content="{Binding Message}"
                   FontSize="15"
                   Margin="20" 
                   VerticalAlignment="Center"/>

            <Button Margin="20"
                    Command="{Binding CloseButtonClickedCommand}"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Foreground="Black">
                <md:PackIcon Kind="Close" />
            </Button>

        </StackPanel>
    </md:Card>
</UserControl>
