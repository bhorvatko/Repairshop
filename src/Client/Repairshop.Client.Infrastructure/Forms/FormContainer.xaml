<Window x:Class="Repairshop.Client.Infrastructure.Forms.FormContainer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Repairshop.Client.Infrastructure.Forms"
        mc:Ignorable="d"
        Title="FormContainer"
        SizeToContent="WidthAndHeight"
        MinWidth="600" MinHeight="300"
        x:Name="formContainer">

    <DockPanel>
        
        <ContentControl DockPanel.Dock="Top" 
                        VerticalContentAlignment="Stretch"
                        x:Name="FormContentControl" />

        <Button DockPanel.Dock="Bottom"
                Click="Submit"
                VerticalAlignment="Bottom"
                Margin="5"
                Padding="5"
                Content="{Binding ElementName=formContainer, Path=SubmitText}"/>

    </DockPanel>
    
</Window>
