<UserControl x:Class="Repairshop.Client.Infrastructure.UserNotifications.ToastNotificationContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Repairshop.Client.Infrastructure.UserNotifications"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance local:ToastNotificationContainerViewModel}">

    <StackPanel Orientation="Horizontal"
                Background="{Binding BackgroundBrush}"
                Visibility="{Binding Visibility}">

        <Label Content="{Binding Message}"
                   FontSize="15" 
                   Margin="20" />

        <Button Content="X" 
                Background="Transparent"
                BorderThickness="0"
                Margin="20"
                Command="{Binding CloseButtonClickedCommand}"/>
        
    </StackPanel>
</UserControl>
