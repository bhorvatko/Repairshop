<nav:MainView x:Class="Repairshop.Client.FrontDesk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:Repairshop.Client.FrontDesk"
        xmlns:procedures="clr-namespace:Repairshop.Client.Features.WarrantManagement.Procedures;assembly=Repairshop.Client.Features.WarrantManagement"
        xmlns:warrants="clr-namespace:Repairshop.Client.Features.WarrantManagement.Warrants;assembly=Repairshop.Client.Features.WarrantManagement"
        xmlns:dashboard="clr-namespace:Repairshop.Client.Features.WarrantManagement.Dashboard;assembly=Repairshop.Client.Features.WarrantManagement"
        xmlns:technicians="clr-namespace:Repairshop.Client.Features.WarrantManagement.Technicians;assembly=Repairshop.Client.Features.WarrantManagement"
        xmlns:nav="clr-namespace:Repairshop.Client.Infrastructure.Navigation;assembly=Repairshop.Client.Infrastructure"
        mc:Ignorable="d"
        Title="Repairshop" Height="1024" Width="1280"
        d:DataContext="{d:DesignInstance Type=local:MainViewModel}">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding NavigateToDashboardCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    
    <Grid>

        <DockPanel>

            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Glavni ekran" 
                          Command="{Binding NavigateToDashboardCommand}" />
                <MenuItem Header="Novi nalog"
                          Command="{Binding NavigateToCreateWarrantViewCommand}" />
                <MenuItem Header="Upravljanje">
                    <MenuItem Header="Procedure" 
                              Command="{Binding NavigateToProceduresViewCommand}"/>
                    <MenuItem Header="Tehničari">
                        <MenuItem Header="Dodaj..." 
                                  Command="{Binding NavigateToAddTechnicianViewCommand}"/>
                    </MenuItem>
                </MenuItem>
            </Menu>

            <ContentControl x:Name="contentControl" />

        </DockPanel>

        <Grid Panel.ZIndex="1000"
              Visibility="{Binding LoadingIndicatorVisibility}">

            <Grid.Background>
                <SolidColorBrush Color="Black" Opacity=".5" />
            </Grid.Background>

            <Label Content="Učitavanje..."
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="30" />

        </Grid>
        
    </Grid>
</nav:MainView>
